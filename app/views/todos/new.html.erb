<% if @todo.errors.any? %>
  <h2>The Following Errors prevented the todo from being saved:</h2>
  <ul>
  <% @todo.errors.full_messages.each do |error| %>
    <li><%= error %></li>
  <% end %>
<% end %>
<h1>Create a new To Do</h1>
<%= form_for @todo do |f| %>
  <p>
    <%= f.label :name %>
    <%= f.text_field :name %>
  </p>

  <p>
    <%= f.label :description %>
    <%= f.text_area :description %>
  </p>

  <p>
    <%= f.submit %>
  </p>
<% end %>
<%= link_to "Back to todos listing", todos_path %>
